datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime  @default(now())
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  products  Product[]
  roles     Json
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model Product {
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  title     String?
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [user_pr_k], references: [id])
  user_pr_k String
}
